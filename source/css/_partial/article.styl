/* =Article
----------------------------------------------- */
.article
  margin: margin-hegiht 0

.article-header .article-title
  border-bottom: 1px solid #f1f1f1
  border-top: 1px solid #f1f1f1
  margin-bottom: 0.5em
  padding: 0.55em 0
  font-size: 1.8em

.article .article-title a
  color: #444444
  text-decoration: none

.article .article-title a:hover,
.article .article-title a:visited:hover
  color: color-link
  opacity: 1

.article-meta, .article-meta a,
.article-meta a:hover, .article-meta a:visited
  padding: 0
  color: #999
  text-decoration: none

.article-content h3
  margin: 1.5em 0
  font-size: 1.35em
  font-family: font-serif

.article-content blockquote code
  font-size: 0.75em

.article-content li code
  padding: 3px;
  font-size: 0.75em

.article-more-link a,
.article-more-link a:visited,
.article-more-link a:hover,
.article-more-link a:visited:hover
  text-decoration: none

.page
  margin-top: 0

.page .article-title
  border-top: 0
  margin-top: 0
  padding: 0 0 1em 0
  text-align: center
  font-size: 2em

.page .article-meta
  font-size: 0.85em
  text-align: center
